{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "checkJs": false,
    "strict": true,
    "jsx": "react",
    "isolatedModules": true,
    "resolveJsonModule": true,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    "downlevelIteration": true,
    "types": ["react", "jest"],
    // other defaults         
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2020.string"],
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
